[Unit]
Description=poa blockscout service
After=network.target
[Service]
User=root
Group=root
WorkingDirectory={{ home }}/blockscout
Restart=on-failure
RestartSec=5
ExecStartPre=/usr/bin/mix local.hex --force
ExecStart=/usr/bin/mix phx.server
Type=simple
# Environment==http://IP_TO_ARCHIVE_NODE:8545
[Install]
WantedBy=multi-user.target
