[Unit]
Description=poa blockscout service
After=network.target
[Service]
User=root
Group=root
WorkingDirectory={{ home }}/blockscout
Restart=on-failure
RestartSec=5
ExecStartPre=/usr/bin/mix local.hex --force
ExecStart=/usr/bin/mix phx.server
Type=simple
Environment==RELEASE_LINK="0.9"
[Install]
WantedBy=multi-user.target
