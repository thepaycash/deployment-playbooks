[parity]
chain = "spec.json"
base_path = "parity_data"
{% if validator_archive|default("off") == "on" %}
auto_update = "all"
{% endif %}

[network]
reserved_peers="{{ home }}/bootnodes.txt"
nat="extip:{{ public_ip.ansible_facts.ipify_public_ip }}"
port = 30303
{% if validator_archive|default("off") == "on" %}
discovery = false
min_peers = 2
max_peers = 10
{% else %}
max_peers = 100
{% endif %}

[rpc]
apis = ["web3", "eth", "parity", "parity_set", "net", "traces", "rpc"]

[account]
password = ["{{ NODE_PWD }}"]
unlock = ["{{ MINING_ADDRESS }}"]

[mining]
usd_per_tx = "0"
min_gas_price = 1000000000
force_sealing = true
engine_signer = "{{ MINING_ADDRESS }}"
gas_floor_target = "{{ BLK_GAS_LIMIT }}"
reseal_on_txs = "none"

{% if validator_archive|default("off") == "on" %}
[ui]
disable = true

[dapps]
disable = true

[snapshots]
disable_periodic = false

[footprint]
tracing = "on"
pruning = "archive"
pruning_history = 1200
fat_db = "on"
cache_size_db = 12000
{% endif %}

[misc]
# log is printed to STDOUT/STDERR - then collected by journald
# log_file = "{{ home }}/logs/parity.log"
